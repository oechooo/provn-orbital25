datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // Reads the DATABASE_URL from the .env file
}

generator client {
  provider = "prisma-client-js" // Use Prisma Client for interacting with the DB
}

model Article {
  id           Int      @id @default(autoincrement())
  sourceName   String
  author       String?
  title        String
  description  String?
  url          String   @unique
  urlToImage   String?
  publishedAt  DateTime
  content      String?
  createdAt    DateTime @default(now())
  category     String?
  market    Market?
}

model Market {
  id             Int      @id @default(autoincrement())
  articleId      Int      @unique
  resolved       Boolean  @default(false)
  outcome        Boolean? // true/false if resolved, null otherwise
  createdAt      DateTime @default(now())
  stakes         Stake[]
  article        Article  @relation(fields: [articleId], references: [id])
}

model Stake {
  id             Int      @id @default(autoincrement())
  userId         Int
  marketId       Int
  prediction     Boolean
  stakeAmount    Int
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])
  market         Market   @relation(fields: [marketId], references: [id])
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  provePoints Int   @default(100)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stakes   Stake[]
}